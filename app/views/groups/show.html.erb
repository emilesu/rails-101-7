<div class="col-md-12">
  <div class="group">
    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>

  <h2><%= @group.title%></h2>
  <div style="font-size: 10px;">开版时间：<%= @group.created_at %></div>
  <p style="margin-top: 15px;"><%= @group.description %></p>
</div>
